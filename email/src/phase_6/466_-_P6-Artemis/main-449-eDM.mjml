      <mj-section background-color="#FFF" padding="0">
        <mj-column width="49%">

          <mj-text mj-class="h1" padding-top="30px">
            Small Footprint, Big Impact
          </mj-text>

          <mj-text mj-class="subheading" padding-top="0">
            With the new IM C320F Desktop MFP
          </mj-text>

          <mj-button href="https://www.ricoh.com/">
            Learn More
          </mj-button>

