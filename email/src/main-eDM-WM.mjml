          </mj-text>
        </mj-column>
      </mj-section>

      <!-- divider -->

      <mj-section padding-top="0" padding-left="20px" padding-right="20px">
        <mj-column>
          <mj-divider border-color="#c9c9c9" container-background-color="#c9c9c9" border-width="1px" />
        </mj-column>
